@using Syncfusion.EJ2;
@{
    ViewBag.Title = "home";
}

@{
    var replyTemplate = "<input type='text' tabindex='1' id='replyAllList' />";
    var movetoTemplate = "<input type='text' tabindex='1' id='moveToList' />";
    var categoryTemplate = "<input type='text' tabindex='1' id='categoryList' />";
    var moreTemplate = "<input type='tex' tabindex='1' id='moreList' />";
    var ele = "<div class='search-div1' style= 'width:90%' >" +
            "<div style='height: 30px'>" +
            "<input type='text' id='txtSearch1' tabindex='1' style='height: 30px' />" +
            "</div>" +
            "</div>";
    var moreToolBarTemplate = "<input type='text' tabindex='1' id='moreList1' />";
}

<div class='row content'>
    <div class='sidebar' style='height:100%' role='complementary'>
        <div style='background-color:#fff; width:100%;height:100%'>
            <div class="search-div">
                <div class="search-device-section">
                    <div style="width: 84%; float: left; height: 40px">
                        <input type='text' id='txtSearch' tabindex='1' style="height: 40px" />
                    </div>
                    <div style="float: right; margin: 4px 0px;">
                        <ejs-button id="btnSearch"></ejs-button>
                    </div>
                </div>
                <div class="search-mobile-section">
                    <div class='logo logo-style3 profile-pic' style='float:left'></div>
                    <div class='messageHeader' style='float:left; height: 50px;'>
                        <div id="username" style="font-size: 17px;color:#333"></div>
                        <div id="usermail" style="font-size: 12px; color: #666"></div>
                    </div>
                    <div style="right:20px;position: absolute;">
                        <ejs-button id="btnCloseButton1"></ejs-button>
                    </div>
                </div>
            </div>
            <aside id="default-sidebar" style="height:100%">
                <div class="folder-pane customScrollBar">
                    <div id='tree'></div>
                </div>
            </aside>
        </div>
    </div>
    <div class="headerContent" style="z-index: 112; height: 100%; background-color: #f4f4f4; width: 330px;right:0; position: absolute">
        <div style="right:20px;position: absolute; top: 35px">
            <ejs-button id="btnCloseButton"></ejs-button>
        </div>
        <div style="margin: 25px 20px 30px 30px;">
            <div class="text-content">
                <span id='txtHeaderContent'>Notification</span>
            </div>
        </div>
        <div class="notification-content">
            <span>Nothing new right now</span>
        </div>
        <div class="settings-content">
            <span class="settings-sub-header">Your app settings</span>
            <div class="anchor-div">
                <a class="about-anchor">
                    <span>Automatic replies</span>
                </a>
            </div>
            <div class="anchor-div">
                <a class="about-anchor">
                    <span>Display settings</span>
                </a>
            </div>
            <div class="anchor-div">
                <a class="about-anchor">
                    <span>Offline settings</span>
                </a>
            </div>
            <div class="anchor-div">
                <a class="about-anchor">
                    <span>Manage add-ins</span>
                </a>
            </div>
        </div>
        <div class="about-content">
            <div class="anchor-div">
                <a class="about-anchor">
                    <span>Help</span>
                </a>
            </div>
            <div class="anchor-div">
                <a class="about-anchor">
                    <span>Feedback</span>
                </a>
            </div>
            <div class="anchor-div">
                <a class="about-anchor">
                    <span>Community</span>
                </a>
            </div>
            <div class="anchor-div">
                <a class="about-anchor">
                    <span>Legal</span>
                </a>
            </div>
            <div class="anchor-div">
                <a class="about-anchor">
                    <span>Privacy & cookies</span>
                </a>
            </div>
        </div>
        <div class="profile-content">
            <div class='logo logo-style2' style='float:left'></div>
            <div class='messageHeader' style='float:left; height: 70px; margin-bottom: 13px;'>
                <div id="username1" style="font-size: 17px"></div>
                <div id="usermail1" style="font-size: 12px; color: #666"></div>
            </div>
            <div class="anchor-div">
                <a class="about-anchor">
                    <span style="font-size: 14px">My profile</span>
                </a>
            </div>
            <div class="anchor-div">
                <a class="about-anchor">
                    <span style="font-size: 14px">My account</span>
                </a>
            </div>
            <div class="anchor-div">
                <a class="about-anchor">
                    <span style="font-size: 14px">Sign Out</span>
                </a>
            </div>
        </div>
    </div>
    <div class='content-wrapper' role='main'>
        <div class='content' style='height:100%'>
            <div class="e-roottools" style='background-color:#fff; width:100%;color:white'>
                <ejs-toolbar id="toolbar_align" overflowMode="Popup" height="100%" width="100%">
                    <e-toolbar-items>
                        <e-toolbar-item prefixIcon="ej-icon-New tb-icons" text="New" tooltipText="Write a new message" cssClass="tb-item-new-mail"></e-toolbar-item>
                        <e-toolbar-item prefixIcon="ej-icon-Mark-as-read tb-icons" text="Mark all as read" tooltipText="Mark all as read" cssClass="tb-item-mark-read"></e-toolbar-item>
                        <e-toolbar-item prefixIcon="ej-icon-Reply-All tb-icons" template="@replyTemplate" tooltipText="Reply All" cssClass="tb-item-Selected tb-item-replyAll"></e-toolbar-item>
                        <e-toolbar-item prefixIcon="ej-icon-Delete tb-icons" text="Delete" tooltipText="Delete" cssClass="tb-item-Selected"></e-toolbar-item>
                        <e-toolbar-item text="Junk" tooltipText="Mark the sender as unsafe and delete the message" cssClass="tb-item-Selected"></e-toolbar-item>
                        <e-toolbar-item template="@movetoTemplate" tooltipText="Move To" cssClass="tb-item-Selected"></e-toolbar-item>
                        <e-toolbar-item template="@categoryTemplate" tooltipText="Add Categories to message" cssClass="tb-item-Selected"></e-toolbar-item>
                        <e-toolbar-item template="@moreTemplate" tooltipText="More actions" cssClass="tb-item-more tb-item-Selected"></e-toolbar-item>
                        <e-toolbar-item prefixIcon="ej-icon-Copy tb-icons" tooltipText="Open in a separate window" cssClass="tb-item-Selected" align="Right"></e-toolbar-item>
                    </e-toolbar-items>
                </ejs-toolbar>
                <ejs-toolbar id="toolbar_mobile" height="100%" width="100%">
                    <e-toolbar-items>
                        <e-toolbar-item prefixIcon="ej-icon-Menu tb-icons" cssClass="tb-item-menu tb-item-front"></e-toolbar-item>
                        <e-toolbar-item prefixIcon="ej-icon-Back" cssClass="tb-item-back-icon tb-item-back"></e-toolbar-item>
                        <e-toolbar-item text="Inbox" cssClass="tb-item-inbox tb-item-front"></e-toolbar-item>
                        <e-toolbar-item text="Compose" cssClass="tb-item-inbox tb-item-back tb-item-newmail-option"></e-toolbar-item>
                        <e-toolbar-item template="@ele" cssClass="tb-item-search-option" align="Center"></e-toolbar-item>
                        <e-toolbar-item prefixIcon="ej-icon-Close" tooltipText="Clear" cssClass="tb-item-search-option" align="Right"></e-toolbar-item>
                        <e-toolbar-item prefixIcon="ej-icon-Search" tooltipText="Search Mail" cssClass="tb-item-front" align="Right"></e-toolbar-item>
                        <e-toolbar-item prefixIcon="ej-icon-Create-New" tooltipText="Write a new message" cssClass="tb-item-front" align="Right"></e-toolbar-item>
                        <e-toolbar-item prefixIcon="ej-icon-Send" tooltipText="Send" cssClass="tb-item-back tb-item-newmail-option" align="Right"></e-toolbar-item>
                        <e-toolbar-item prefixIcon="ej-icon-Attach" tooltipText="Attach" cssClass="tb-item-back tb-item-newmail-option" align="Right"></e-toolbar-item>
                        <e-toolbar-item prefixIcon="ej-icon-Delete" tooltipText="Delete" cssClass="tb-item-back" align="Right"></e-toolbar-item>
                        <e-toolbar-item prefixIcon="ej-icon-Reply-All" tooltipText="Reply All" cssClass="tb-item-back" align="Right"></e-toolbar-item>
                        <e-toolbar-item template="@moreToolBarTemplate" tooltipText="More actions" cssClass="tb-item-more tb-item-back" align="Right"></e-toolbar-item>
                    </e-toolbar-items>
                </ejs-toolbar>
            </div>
            <div class='maincontent_pane' style='background-color:#fff; width:100%;height:calc(100% - 40px);color:white'>
                <div class='message-pane customScrollBar' style='overflow: auto'>
                    <div class="filter-section">
                        <div style='float: left; margin-top: 5px;'>
                            <span id="spanFilterText" style='font-size: 22px;color:#333333'>Inbox</span>
                        </div>
                        <div style='right:25px; position: absolute; top:10px'>
                            <span style='font-size: 16px; color: #0078D7'>Filter</span>
                            <ejs-button id="btnFilter"></ejs-button>
                        </div>
                    </div>
                    <div id='listview-grp' tabindex='1'></div>
                </div>
                <div id='reading-pane-div' class='reading-pane customScrollBar'>
                    <div id='emptyMessageDiv' style='width: 100%;text-align: center; vertical-align: middle; padding: 15px;height:100%; background-color:#fff;'>
                        <div style="top:35%; left: 40%; position: absolute; display: block">
                            <div class="emptyImageDiv"></div>
                            <br />
                            <span class="emptyDivText">Choose a message to read it.</span>
                        </div>
                    </div>
                    <div id='accordian' style='display: none;'></div>
                    <div id='mailarea' style='display: none; height:100%; background-color:#fff;'></div>
                    <div id="newmailContent"></div>
                </div>
            </div>
        </div>
    </div>
    <div id='accodianContent' style='display: none'>
        <div style='height: 100px'>
            <div class='logo logo-style2' style='float:left'></div>
            <div class='messageHeader' style='float:left'>
                <div id='sub' style="font-size: 17px"></div>
                <div id='date' style="font-size: 11px; color: #666;"></div>
                <div id='to' style="font-size: 12px;"></div>
            </div>
            <div style="right:0;position: absolute;">

            </div>
        </div>
        <div id='accContent'>
        </div>
    </div>
    <div id='reading-pane-popup'>

    </div>
    <div class="overlay-element">
    </div>
</div>
<ul id='treeContextMenu'></ul>
<ul id='moveToMenuItems'></ul>
<ul id='categoryMenuItems'></ul>
<ul id='moreMenuItems'></ul>
<ul id='filterContextMenu'></ul>
